class CondLoopsExercise2
{
 public static void main(String[] args)
 {
  char letter;
  
  do
  {
    System.out.print("enter a letter of the alphabet : ");
    letter = In.getChar();
  }
  while !('A' <= letter && 'Z' <= letter || 'a' <= letter && 'z' <= letter);
 }
